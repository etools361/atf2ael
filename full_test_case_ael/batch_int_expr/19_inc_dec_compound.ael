// 19_inc_dec_compound.ael - 自增自减与复合赋值
// 目的：覆盖 i++, ++i, i+=, i-=, i*=, i/=, i%=

decl i = 0;

defun test_inc_dec()
{
    i = 0;
    i++;        // 后置自增
    ++i;        // 前置自增
    i--;        // 后置自减
    --i;        // 前置自减

    i += 2;
    i -= 1;
    i *= 3;
    i /= 2;
    i %= 2;
}

test_inc_dec();

